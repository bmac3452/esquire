datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String             @id @default(cuid())
  email            String             @unique
  passwordHash     String
  name             String?
  state            String?
  educationLevel   String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  caseNotes        CaseNote[]
  clients          Client[]
  posts            Post[]
  comments         Comment[]
  likes            Like[]
  following        Follow[]           @relation("UserFollows")
  followers        Follow[]           @relation("UserFollowedBy")
  media            PostMedia[]
  notifications    Notification[]
  documentAnalyses DocumentAnalysis[]
}

model Post {
  id        String      @id @default(cuid())
  content   String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments  Comment[]
  likes     Like[]
  media     PostMedia[]
}

model PostMedia {
  id        String   @id @default(cuid())
  url       String
  filename  String
  mimeType  String
  size      Int
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}

model Follow {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  followerId  String
  followingId String

  follower  User @relation("UserFollows", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowedBy", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
}

model Client {
  id               String             @id @default(cuid())
  name             String
  email            String?
  phone            String?
  address          String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  userId           String
  user             User               @relation(fields: [userId], references: [id])
  documentAnalyses DocumentAnalysis[]
}

model Notification {
  id        String   @id @default(cuid())
  type      String // 'like', 'comment', 'follow', 'mention'
  content   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  actorId   String? // User who triggered the notification
  postId    String? // Related post if applicable
  commentId String? // Related comment if applicable
}

// Legal Analysis Models
model DocumentAnalysis {
  id             String @id @default(cuid())
  title          String
  documentType   String // 'affidavit', 'police_statement', 'evidence', 'other'
  documentUrl    String // File path or URL to uploaded document
  documentText   String @db.Text // Extracted text from document
  analysisStatus String @default("pending") // 'pending', 'analyzing', 'completed', 'failed'

  // AI Analysis Results
  inconsistencies      Json? // Array of flagged inconsistencies
  constitutionalIssues Json? // Array of constitutional violations
  suggestedCaseLaws    Json? // Array of relevant case law IDs
  legalArguments       Json? // Array of recommended arguments
  aiSummary            String? @db.Text // Overall AI analysis summary

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  clientId  String?
  client    Client?  @relation(fields: [clientId], references: [id])
}

model CaseLaw {
  id           String   @id @default(cuid())
  caseName     String
  citation     String   @unique
  year         Int
  court        String
  jurisdiction String // 'Federal', 'State', specific state name
  category     String // 'Constitutional', 'Criminal', 'Civil Rights', etc.
  summary      String   @db.Text
  relevantText String   @db.Text // Key excerpts from the case
  fullTextUrl  String? // Link to full case text if available
  keywords     String[] // Search keywords
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CaseNote {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
